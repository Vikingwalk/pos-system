<?xml version="1.0" encoding="UTF-8"?>
<Scene>
    <VBox spacing="0" style="-fx-padding: 0; -fx-background-color: #000000;" VBox.vgrow="ALWAYS">
        <HBox spacing="10" style="-fx-padding: 5; -fx-background-color: #000000;">
            <Label text="Admin Dashboard - Mondalak Coffee" style="-fx-text-fill: #cccccc; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-text-fill: #cccccc; -fx-font-size: 14;"/>
            <Button text="Sales Report" fx:id="salesReportButton" style="-fx-background-color: #9b59b6; -fx-text-fill: #cccccc; -fx-font-weight: bold;"/>
            <Button text="Logout" fx:id="logoutButton" style="-fx-background-color: #e74c3c; -fx-text-fill: #cccccc;"/>
        </HBox>
        
        <TabPane style="-fx-background-color: #000000;" VBox.vgrow="ALWAYS">
            <Tab text="User Management">
                <VBox spacing="5" style="-fx-padding: 5; -fx-background-color: #000000;" VBox.vgrow="ALWAYS">
                    <Label text="User Management" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #cccccc;"/>
                    <TableView fx:id="userTable" VBox.vgrow="ALWAYS" style="-fx-background-color: #000000;"/>
                    
                    <HBox spacing="10">
                        <TextField fx:id="usernameField" promptText="Username" prefWidth="150" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <TextField fx:id="passwordField" promptText="Password" prefWidth="150" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <ComboBox fx:id="roleComboBox" promptText="Role" prefWidth="120" style="-fx-background-color: #000000; -fx-text-fill: #cccccc;"/>
                        <Button fx:id="addUserButton" text="Add User" style="-fx-background-color: #27ae60; -fx-text-fill: #cccccc;"/>
                        <Button fx:id="deleteUserButton" text="Delete User" style="-fx-background-color: #e74c3c; -fx-text-fill: #cccccc;"/>
                        <Button fx:id="refreshUsersButton" text="Refresh Users" style="-fx-background-color: #3498db; -fx-text-fill: #cccccc;"/>
                    </HBox>
                </VBox>
            </Tab>
            
            <Tab text="Product Management">
                <VBox spacing="5" style="-fx-padding: 5; -fx-background-color: #000000;" VBox.vgrow="ALWAYS">
                    <Label text="Product Management" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #cccccc;"/>
                    <TableView fx:id="productTable" VBox.vgrow="ALWAYS" style="-fx-background-color: #000000;"/>
                    
                    <HBox spacing="10">
                        <TextField fx:id="productNameField" promptText="Product Name" prefWidth="150" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <TextField fx:id="productDescriptionField" promptText="Description" prefWidth="200" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <TextField fx:id="productPriceField" promptText="Price" prefWidth="100" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <TextField fx:id="productStockField" promptText="Stock" prefWidth="100" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <TextField fx:id="productCategoryField" promptText="Category" prefWidth="120" style="-fx-background-color: #000000; -fx-text-fill: #cccccc; -fx-border-color: #333333;"/>
                        <Button fx:id="addProductButton" text="Add Product" style="-fx-background-color: #27ae60; -fx-text-fill: #cccccc;"/>
                        <Button fx:id="deleteProductButton" text="Delete Product" style="-fx-background-color: #e74c3c; -fx-text-fill: #cccccc;"/>
                        <Button fx:id="reduceStockButton" text="Reduce Stock" style="-fx-background-color: #f39c12; -fx-text-fill: #cccccc;"/>
                        <Button fx:id="refreshProductsButton" text="Refresh Products" style="-fx-background-color: #3498db; -fx-text-fill: #cccccc;"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</Scene>